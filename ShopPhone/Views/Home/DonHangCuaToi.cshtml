@model IEnumerable<ShopPhone.Models.DonHangCuaToi>

@{
    ViewBag.Title = "Đơn hàng của tôi";
}



<div class="card mt-3">
    <h5 class="card-header">Đơn hàng của   @Session["HoTenKhachHang"].ToString()</h5>
    <div class="card-body">
        <table class="table table-bordered table-hover table-sm">
            <tr>
                <th width="5%">STT</th>
                <th>Hình ảnh</th>
                <th>Sản phẩm</th>
                <th width="10%">Số lượng</th>
                <th>Đơn giá</th>
                <th>Thành tiền</th>
                <th>Thời gian đặt hàng</th>
            </tr>

            @{int stt = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td>#</td>
                    <td><img src="~/@item.HinhAnhBia" width="50" /></td>
                    <td>@item.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td class="card-text text-center">@String.Format("{0:N0}", item.DonGia)</td>
                    <td class="text-right">@(item.SoLuong * item.DonGia)</td>
                    <td>@item.NgayDatHang</td>
                </tr>
                stt++;
            }

        </table>

    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
