@model ShopPhone.Models.KhachHang

@{
    ViewBag.Title = "Xóa khách hàng";
}

<div class="card mt-3">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fa fa-exclamation-triangle"></i> Bạn có muốn xóa khách hàng <strong>@Model.HoTen</strong> không?
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xóa" class="btn btn-primary" />
                </div>
                <hr />
                <div class="text-center font-weight-bold">
                    @Html.ActionLink("Quay Về", "Index")
                </div>
            </div>
        }
    </div>
</div>

