@model ShopPhone.Models.NoiSanXuat

@{
    ViewBag.Title = "Thêm nhà sản xuất";
}

<div class="card mt-3">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.XuatXu)
                @Html.EditorFor(model => model.XuatXu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.XuatXu, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-0">
                <button type="submit" class="fa btn-success"><i class="fa-1x fa-save"></i> Thêm mới</button> hoặc @Html.ActionLink("Quay về danh sách", "Index")
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    .form-group {
        width: 1000px;
        margin-left: 350px;
    }
</style>